{
  "name": "@sqdn/squadron",
  "version": "0.1.0",
  "description": "Squadron of executive Node.js units",
  "keywords": [
    "application-server",
    "worker-threads"
  ],
  "homepage": "https://github.com/sqdn/squadron",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:sqdn/squadron.git"
  },
  "license": "MIT",
  "author": "Ruslan Lopatin <ruslan.lopatin@gmail.com>",
  "bugs": {
    "url": "https://github.com/sqdn/squadron/issues"
  },
  "type": "module",
  "main": "./dist/squadron.js",
  "types": "./index.d.ts",
  "exports": "./dist/squadron.js",
  "engines": {
    "node": ">=14.16"
  },
  "peerDependencies": {
    "@proc7ts/context-values": "^6.2.0"
  },
  "dependencies": {
    "@proc7ts/logger": "^1.2.0",
    "@proc7ts/primitives": "^3.0.2",
    "@proc7ts/supply": "^1.2.1",
    "@proc7ts/workbench": "^1.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^27.0.6",
    "@proc7ts/context-values": "^6.2.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@run-z/eslint-config": "^1.3.0",
    "@run-z/rollup-helpers": "^1.1.1",
    "@sqdn/order": "^0.1.1",
    "@types/node": "^14.17.4",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-plugin-jest": "^24.3.6",
    "gh-pages": "^3.2.3",
    "jest": "^27.0.6",
    "jest-junit": "^12.2.0",
    "jest-mock": "^27.0.6",
    "rollup": "^2.52.8",
    "rollup-plugin-flat-dts": "^1.2.2",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.30.0",
    "run-z": "^1.9.1",
    "shx": "^0.3.3",
    "ts-jest": "^27.0.3",
    "tslib": "^2.3.0",
    "typedoc": "^0.21.2",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "all": "run-z build,lint,test",
    "build": "run-z +z --then rollup -c",
    "ci:all": "run-z all +test/--ci/--runInBand",
    "clean": "run-z +z --then shx rm -rf 'index.d.ts?(.map)' '*/index.d.ts?(.map)' dist target",
    "doc": "run-z +z --then typedoc",
    "doc:publish": "run-z doc --then gh-pages --dist target/typedoc --dotfiles",
    "lint": "run-z +z --then eslint . --ext .js,.ts",
    "test": "run-z +z env:NODE_OPTIONS='--experimental-vm-modules --no-warnings' --then jest",
    "z": "run-z +cmd:rollup,+cmd:typedoc,+cmd:eslint,+cmd:jest"
  }
}
